# Light/Default mode settings:

set notification-error-bg       "#FFBDCB" # Red
set notification-error-fg       "#FFFCFF" # Foreground
set notification-warning-bg     "#FFDCAC" # Orange
set notification-warning-fg     "#191919" # Selection
set notification-bg             "#0A0D0F" # Background
set notification-fg             "#FFFCFF" # Foreground

set completion-bg               "#0A0D0F" # Background
set completion-fg               "#191C1E" # Comment
set completion-group-bg         "#0A0D0F" # Background
set completion-group-fg         "#191C1E" # Comment
set completion-highlight-bg     "#191919" # Selection
set completion-highlight-fg     "#FFFCFF" # Foreground

set index-bg                    "#0A0D0F" # Background
set index-fg                    "#FFFCFF" # Foreground
set index-active-bg             "#191919" # Current Line
set index-active-fg             "#FFFCFF" # Foreground

set inputbar-bg                 "#0A0D0F" # Background
set inputbar-fg                 "#FFFCFF" # Foreground
set statusbar-bg                "#0A0D0F" # Background
set statusbar-fg                "#FFFCFF" # Foreground

set highlight-color             "#B4F8C8" # Green
set highlight-active-color      "#FFBDCB" # Pink

set default-bg                  "#0A0D0F" # Background
set default-fg                  "#FFFCFF" # Foreground

set render-loading              true
set render-loading-fg           "#0A0D0F" # Background
set render-loading-bg           "#FFFCFF" # Foreground

# Recolor mode settings

set recolor-lightcolor          "#0A0D0F" # Background
set recolor-darkcolor           "#FFFCFF" # Foreground
